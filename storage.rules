rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 게시글 첨부파일
    match /posts/{postId}/{fileName} {
      // 읽기: 모두 가능
      allow read: if true;
      
      // 쓰기: 인증된 사용자만
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024  // 50MB 제한
        && request.resource.contentType.matches('image/.*|video/.*|application/pdf|application/msword|application/vnd.*');
    }
  }
}

